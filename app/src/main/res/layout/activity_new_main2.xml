<RelativeLayout android:id="@+id/activity_with_view_pager"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/view_feed_toolbar"
        android:id="@+id/toolbar"/>

    <FrameLayout
        android:id="@+id/Frame_Continuer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"
        android:layout_below="@+id/toolbar" />



    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countTextColor="#ffffff"
        android:elevation="0dp"
        android:alpha="0.7"
        app:mbn_defaultIconColor="@color/grey"
        app:mbn_rippleColor="@color/colorPrimary"
        app:mbn_selectedIconColor="@color/backber"
        app:mbn_shadowColor="@color/grey_Light" />

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/white"
    android:padding="10dp"
    android:textDirection="ltr">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:textDirection="ltr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="8dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"

                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_View_score_eng3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli"
                                android:freezesText="true"
                                android:padding="4dp"
                                android:text="Score : 0"
                                android:textColor="@color/black"
                                android:textDirection="ltr"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/text_View_count_question_eng3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_weight="1"
                                android:fontFamily="@font/muli"
                                android:freezesText="true"
                                android:padding="4dp"
                                android:text="Question :1 / x"
                                android:textColor="@color/black"
                                android:textDirection="ltr"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/countDown_eng3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="start"
                                android:layout_marginStart="17sp"
                                android:fontFamily="@font/muli"
                                android:gravity="start|center"
                                android:layoutDirection="rtl"
                                android:text="2:30"
                                android:textColor="@color/black"
                                android:textDirection="rtl"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:typeface="serif"
                                android:visibility="visible" />
                        </LinearLayout>

                    </FrameLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/qution_eng3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="30sp"
                    android:fontFamily="@font/muli"
                    android:freezesText="true"
                    android:textStyle="bold"
                    android:text="the qution is here Like what the Capital of the syria"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_margin="3dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_cranium_2099130"
                android:textDirection="ltr"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <RadioGroup
                    android:id="@+id/Radio_Group_eng3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="ltr">

                    <RadioButton

                        android:id="@+id/radio_button1_eng3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/muli"
                        android:freezesText="true"
                        android:gravity="start"
                        android:padding="4dp"
                        android:text="option (1)"
                        android:textColor="#5e5d5d"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_button2_eng3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/muli"
                        android:freezesText="true"
                        android:gravity="start"
                        android:padding="4dp"
                        android:text="option (2)"
                        android:textColor="#5e5d5d"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_button3_eng3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/muli"
                        android:freezesText="true"
                        android:gravity="start"
                        android:padding="4dp"
                        android:text="option (3)"
                        android:textColor="#5e5d5d"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_button4_eng3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/muli"
                        android:freezesText="true"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:padding="4dp"
                        android:text="option (4)"

                        android:textColor="#5e5d5d"
                        android:textSize="16dp" />


                </RadioGroup>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/confirm_next_eng3"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bbbb"
        android:fontFamily="@font/muli"
        android:freezesText="true"
        android:gravity="center"
        android:text="Confirm"
        android:textColor="#fff"

        android:textDirection="ltr"
        android:textStyle="bold" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/white"
    android:orientation="vertical">
<com.xw.repo.widget.BounceScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:orientation="vertical">
       <ImageView
           android:id="@+id/back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="start"
           android:padding="@dimen/ib_fr_space_20"
           app:srcCompat="@drawable/ic_back_button"/>
        <ImageView
            android:id="@+id/toolbar_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30sp"
            android:padding="15dp"

            app:srcCompat="@drawable/ic_settings_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/round15"
            android:padding="10dp">

            <ImageView
                android:id="@+id/edit_name"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:checked="true"
                android:tint="@color/backber"
                app:srcCompat="@drawable/ic_edit" />

            <EditText
                android:id="@+id/name_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:enabled="false"
                android:fontFamily="@font/a4"
                android:gravity="center|bottom"
                android:text="عبدالقادر النجار "
                android:textColor="@color/backber" />


        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:background="@drawable/bbb"
            android:text="حفظ"
            android:animateLayoutChanges="true"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@color/grey_Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20sp"
                android:gravity="center"
                android:text="تأثيرات الصوت "
                android:textColor="@color/backber" />


        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@color/grey_Light" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="وقت السؤال"
                    android:textColor="@color/backber" />

                <RadioGroup
                    android:id="@+id/Group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:checkedButton="@id/r2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/a3"
                        android:text="30"
                        android:textColor="@color/backber" />

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/a3"
                        android:text="40"
                        android:textColor="@color/backber" />

                    <RadioButton
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/a3"
                        android:text="50"
                        android:textColor="@color/backber" />


                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.xw.repo.widget.BounceScrollView>



</LinearLayout>
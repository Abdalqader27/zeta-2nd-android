<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xw.repo.widget.BounceScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundbottom20"
                android:elevation="20dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="30sp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:tint="@color/colorPrimary"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_untitled" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/hugme"
                    android:gravity="left"
                    android:padding="15dp"
                    android:text="ZETA  / EN 1 "
                    android:textSize="17sp"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ge"

                    android:text="أوراق ذهبية "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"

                    android:fontFamily="@font/ge"
                    android:text="تقدم لكم الأوراق الكشكولية"
                    android:textSize="13sp" />


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"

                    android:paddingStart="15dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:srcCompat="@drawable/ic_undraw_design_tools_42tf" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:background="@color/grey_Light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:lines="2"
                                    android:padding="15dp"
                                    android:scrollHorizontally="false"
                                    android:text="التصميم الإعلاني"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="1200 "
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:srcCompat="@drawable/ic_undraw_product_tour_foyt" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:background="@color/grey_Light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:lines="2"
                                    android:padding="15dp"
                                    android:scrollHorizontally="false"
                                    android:text="تنظيم المعارض والمؤتمرات "
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="16dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">


                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:textSize="30sp"
                                    android:textStyle="bold"
                                    app:srcCompat="@drawable/ic_undraw_scrum_board_cesn" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:background="@color/grey_Light" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="none"
                                    android:gravity="center"
                                    android:inputType="textMultiLine"
                                    android:lines="2"
                                    android:padding="15dp"
                                    android:scrollHorizontally="false"
                                    android:text="تنظيم الحملات الإعلانية"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/ge"

                    android:text="أسئلة الدورات "
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"

                    android:text="العدد : 9  "
                    android:textSize="13sp" />


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"

                    android:paddingStart="15dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/round15"

                            android:elevation="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:padding="15dp"
                                        app:srcCompat="@drawable/ic_file_in_folder" />

                                    <TextView
                                        android:id="@+id/row_name_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_bold"

                                        android:padding="10dp"
                                        android:text="دورة 2017"
                                        android:textAlignment="center"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/number_quiz_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_light"
                                        android:gravity="center"
                                        android:lineSpacingMultiplier="1.4"
                                        android:padding="5dp"
                                        android:text="الدورة الاولى فقط "
                                        android:textAlignment="center"
                                        android:textColor="#848484"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/type_of_rep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="15dp"
                                    android:fontFamily="@font/r4"
                                    android:gravity="left"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:visibility="gone" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/round15"

                            android:elevation="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:padding="15dp"
                                        app:srcCompat="@drawable/ic_file_in_folder" />

                                    <TextView
                                        android:id="@+id/row_name_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_bold"

                                        android:padding="10dp"
                                        android:text="دورة 2017"
                                        android:textAlignment="center"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/number_quiz_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_light"
                                        android:gravity="center"
                                        android:lineSpacingMultiplier="1.4"
                                        android:padding="5dp"
                                        android:text="الدورة الاولى فقط "
                                        android:textAlignment="center"
                                        android:textColor="#848484"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/type_of_rep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="15dp"
                                    android:fontFamily="@font/r4"
                                    android:gravity="left"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:visibility="gone" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/round15"

                            android:elevation="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:padding="15dp"
                                        app:srcCompat="@drawable/ic_file_in_folder" />

                                    <TextView
                                        android:id="@+id/row_name_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_bold"

                                        android:padding="10dp"
                                        android:text="دورة 2017"
                                        android:textAlignment="center"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/number_quiz_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_light"
                                        android:gravity="center"
                                        android:lineSpacingMultiplier="1.4"
                                        android:padding="5dp"
                                        android:text="الدورة الاولى فقط "
                                        android:textAlignment="center"
                                        android:textColor="#848484"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/type_of_rep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="15dp"
                                    android:fontFamily="@font/r4"
                                    android:gravity="left"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:visibility="gone" />


                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/round15"

                            android:elevation="10dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layoutDirection="rtl">


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/picture"
                                        android:layout_width="match_parent"
                                        android:layout_height="70dp"
                                        android:padding="15dp"
                                        app:srcCompat="@drawable/ic_file_in_folder" />

                                    <TextView
                                        android:id="@+id/row_name_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_bold"

                                        android:padding="10dp"
                                        android:text="دورة 2017"
                                        android:textAlignment="center"
                                        android:textSize="19sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/number_quiz_re"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/tajawal_light"
                                        android:gravity="center"
                                        android:lineSpacingMultiplier="1.4"
                                        android:padding="5dp"
                                        android:text="الدورة الاولى فقط "
                                        android:textAlignment="center"
                                        android:textColor="#848484"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/type_of_rep"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="15dp"
                                    android:fontFamily="@font/r4"
                                    android:gravity="left"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:visibility="gone" />


                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>


                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>
    </com.xw.repo.widget.BounceScrollView>

</LinearLayout>